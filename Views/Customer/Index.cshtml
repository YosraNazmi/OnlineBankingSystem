@model IEnumerable<ABC_Bank.Models.Customers>


@{ ViewData["Title"] = "Index"; }

@{ Layout = "~/Views/Shared/_AdminLayout.cshtml"; }


<div class="container">
    <h1>Accounts</h1>
    <p>
        <a asp-action="Create">Create New</a>
    </p>

    <form asp-controller="Customer" asp-action="Index">
        <p>
            First Name: <input type="text" name="SearchString" />
            <input type="submit" value="Filter" />
        </p>

    </form>

    <table class="table table-sm">
        <thead>
            <tr>

                <th scope="col">
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.SecondName)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.DOB)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.City)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.State)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.PostCode)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Tell)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.AccountType)
                </th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {

                if (item.Role == "Customer")
                {
<tr>

    <td>
        @Html.DisplayFor(modelItem => item.Title)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.FirstName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SecondName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DOB)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Address)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.City)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.State)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PostCode)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Tell)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.AccountType)
    </td>
    <td>
        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
    </td>

</tr>}
            }
        </tbody>
    </table>
</div>