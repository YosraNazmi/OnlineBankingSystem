            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TransactionName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TransactionName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TransactionAmount)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TransactionAmount)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TransactionDate)
