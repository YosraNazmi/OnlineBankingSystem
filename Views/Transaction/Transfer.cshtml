@using Microsoft.AspNetCore.Http;
@model ABC_Bank.Models.Transactions

@{


    Layout = "~/Views/Shared/_UserLayout.cshtml";

}

<div class="container">
    <h4>Transfer Money</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Transfer">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <p class="card-text"> @Context.Session.GetString("FullName")</p>

                <p class="card-text">Bank Account NO:  @Context.Session.GetInt32("AccountID") </p>
                <div class="form-group">
                    <label asp-for="AccountNumber" class="control-label">From: Account Number</label>
                    <input asp-for="AccountNumber" class="form-control" />
                    <span asp-validation-for="AccountNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DestinationAccount" class="control-label">To: Destination Account</label>
                    <input asp-for="DestinationAccount" class="form-control" />
                    <span asp-validation-for="DestinationAccount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TransactionAmount" class="control-label">Amount</label>
                    <input asp-for="TransactionAmount" class="form-control" />
                    <span asp-validation-for="TransactionAmount" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Transfer" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>